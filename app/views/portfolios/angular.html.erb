<h1>Angular Items</h1>

<p><%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %></p>

<% @angular_portfolio_items.each do |item| %>
  <h2><%= link_to item.title, portfolio_show_path(item) %></h2>
  <h3><%= item.subtitle %></h3>
  <p><%= item.body %></p>
  <p><%= image_tag item.thumb_image unless item.thumb_image.nil?%></p>
  <p><%= link_to "Edit", edit_portfolio_path(item) if logged_in?(:site_admin) %></p>
  <p><%= link_to "Delete", item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>  
<% end %>
