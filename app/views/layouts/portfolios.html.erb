<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <meta name="keywords" content="<%= @seo_keywords %>"
    <%= csrf_meta_tags %> 

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- nav -->
    <%= render 'shared/portfolio_nav' %>
    <!-- /nav -->

    <!-- masthead -->
    <% unless logged_in?(:site_admin) %>
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Portfolio</h1>
          <p class="lead text-muted">A selection of my projects...</p>
          <p>
            <%= link_to 'Learn more', about_me_path, class: 'btn btn-secondary my-2' %>
            <%= link_to 'My Blog', blogs_path, class: 'btn btn-primary my-2' %>      
          </p>
        </div>
      </section>
    <% end %>
    <!-- /masthead -->

    <!-- main -->
    <main role="main">
      
      <%= yield %>

    </main>

    <!-- footer -->
    <%= render 'shared/portfolio_footer' %>
    <!-- /footer -->

    <%= source_helper("application") %>

  </body>
</html>
