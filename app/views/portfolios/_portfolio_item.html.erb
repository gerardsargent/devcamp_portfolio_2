<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image, class: 'card-img-top' unless portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <h4><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: 'card-text' %></h4>
      <h5 class="card-text"><%= portfolio_item.subtitle %></h5>          
      <p class="card-text"><%= portfolio_item.body %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
          <%= link_to "Delete", portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' if logged_in?(:site_admin) %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
